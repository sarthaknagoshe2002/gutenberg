{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "core/countdown",
	"title": "Countdown",
	"icon": "clock",
	"description": "A countdown timer block with customizable options.",
	"textdomain": "default",
	"attributes": {
		"endTime": {
			"type": "string"
		},
		"showDays": {
			"type": "boolean",
			"default": true
		},
		"showHours": {
			"type": "boolean",
			"default": true
		},
		"showMinutes": {
			"type": "boolean",
			"default": true
		},
		"showSeconds": {
			"type": "boolean",
			"default": true
		},
		"actionOnEnd": {
			"type": "string",
			"default": "hide"
		},
		"actionValue": {
			"type": "string",
			"default": ""
		},
		"bgColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"borderColor": {
			"type": "string",
			"default": "#000000"
		}
	},
	"supports": {
		"align": [ "wide", "full" ],
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"gradients": true,
			"text": true,
			"__experimentalDefaultControls": {
				"background": true
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		}
	},
	"style": "file:./style.css"
}
